
<div class="container">
  <h class="display-6">Send Daily Status Updates</h>
<%= form_for(@daily_status_update) do |f|%>

  <div class="form-row">
     <div class="form-group col-3">
      <%= f.label :to, "Your Reporting Manager Email" %>
      <%= f.text_field :to, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :user_id, "Select the User for this task:" %><br>
      <%= f.collection_select :user_id, User.all, :id, :email %>
    </div>
    <div class="form-group">
      <%= f.label :status_date, "Status Date"%>
      <%= f.date_select :status_date, class: "form-control" %>
    </div>
  </div>


    <div class="form-group col-md-4">
      <%= f.label :project, "Select the Project for this task:" %><br>
      <%= f.collection_select :project, Project.all, :id, :name %>
    </div>
    <div class="form-group col-md-1">
      <%= f.label :working_hours, "Working Hours" %>
      <%= f.time_field :working_hours, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :user_id, "Select the User for this task:" %><br>
      <%= f.collection_select :user_id, User.all, :id, :email %>
    </div>

    <div class="form-group col-7">
      <%= f.label :task, "Task" %>
      <%= f.text_field :task, class: "form-control" %>
    </div><br>

    <div class="actions">
      <%= f.submit "Send", class: "btn btn-success" %>
    </div>
  <% end  %>

 </div>

<p>Find me in app/views/daily_status_updates/new.html.erb</p>
